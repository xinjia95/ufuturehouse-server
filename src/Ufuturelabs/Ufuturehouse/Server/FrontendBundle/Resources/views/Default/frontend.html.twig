{% extends '::base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('bundles/frontend/css/styles.css') }}" />
    <link rel="stylesheet" href="{{ asset('bundles/frontend/css/navbar.css') }}" />
{% endblock %}

{% block body %}
    <header>
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">{{ ufuturehouse.business_name }}</a>
                </div>
                <div class="collapse navbar-collapse" id="bs-navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li><a href="{{ path('frontend_index') }}">{{ 'navbar.home' | trans }}</a></li>
                        <li><a href="#">{{ 'navbar.housing' | trans }}</a></li>
                        <li><a href="#">{{ 'navbar.sell' | trans }}</a></li>
                        <li><a href="#">{{ 'navbar.rent' | trans }}</a></li>
                        <li><a href="#">{{ 'navbar.buy' | trans }}</a></li>
                        <li><a href="#">{{ 'navbar.who_are_we' | trans }}</a></li>
                    </ul>
                </div>
            </div><!-- /container-fluid -->
        </nav><!-- /nav-bar -->
        {% block header %}
            <div class="header-presentation">
                <div class="container">
                    <img src="{{ asset('img/bussiness_logo.jpg') }}" width="128px" height="128px" />
                    <p class="lead">{{ ufuturehouse.business_name }}</p>
                </div>
            </div>
        {% endblock %}
    </header>
    <article>
        {% block article %}{% endblock %}
    </article>
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-6 col-lg-6">
                    <address>
                        <strong>{{ ufuturehouse.business_name }}</strong><br>
                        {{ 'footer.street' | trans }}: {{ ufuturehouse.business_street }}<br>
                        {{ 'footer.city' | trans }}: {{ ufuturehouse.business_city }}<br>
                        {{ 'footer.zip_code' | trans }}: {{ ufuturehouse.business_postal_code }}<br>
                        {{ 'footer.state' | trans }}: {{ ufuturehouse.business_state }}<br>
                        {{ 'footer.telephone' | trans }}: <a href="tel:{{ ufuturehouse.business_telephone }}">{{ ufuturehouse.business_telephone }}</a><br>
                        {{ 'footer.fax' | trans }}: <a href="fax:{{ ufuturehouse.business_fax }}">{{ ufuturehouse.business_fax }}</a><br>
                        {{ 'footer.email' | trans }}: <a href="mailto:{{ ufuturehouse.business_email }}">{{ ufuturehouse.business_email }}</a><br>
                    </address>
                </div>
                <div class="col-sm-12 col-md-6 col-lg-6 social">

                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="footer-copyright">&copy; {{ ufuturehouse.business_name }} {{ "now" | date('Y') }} - Designed by uFutureLabs</div>
                </div>
        </div>
    </footer>
{% endblock %}
