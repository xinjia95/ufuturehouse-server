{% extends '::base.html.twig' %}

{% block title %}Iniciar sesi&oacute;n{% endblock %}

{% block stylesheets %}<link href="{{ asset("bundles/backend/css/login.css") }}" rel="stylesheet" type="text/css" />{% endblock %}

{% block body %}
    <form class="form-login" role="form" action="{{ path('backend_login_check') }}" method="post">
        <div class="form-login-header">
            <img src="{{ asset('img/logo.png') }}" id="img-login-form" alt="Logo" />
            <h1>uFutureHouse</h1>
            <h2>Iniciar sesi&oacute;n</h2>
        </div>
        {% if error %}
            <div class="form-login-error bg-danger">{{ error.message }}</div>
        {% endif %}
        <div class="form-login-body">
            <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                <input type="text" id="username" class="form-control" name="_username" placeholder="Nombre de usuario" value="{{ last_username }}" required autofocus />
            </div>
            <div class="input-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                <input type="password" id="password" class="form-control" name="_password" placeholder="Contrase&ntilde;a" required />
            </div>
            <label class="checkbox">
                <input type="checkbox" value="remember-me"> Recu&eacute;rdame
            </label>
            <input type="submit" class="btn btn-lg btn-primary btn-block" value="Iniciar sesi&oacute;n" />
            <p><a href="#">Forgot password?</a></p>
        </div>
    </form>
{% endblock %}