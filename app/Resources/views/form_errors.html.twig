{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
            {% if compound %}
                <div class="alert alert-danger" role="alert">
                    {% for error in errors %}
                        <p>{{ error.message }}</p>
                    {% endfor %}
                </div>
            {% else %}
                <div class="row">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="alert alert-danger" role="alert" style="margin-top: 5px;">
                            {% for error in errors %}
                                <p>{{ error.message }}</p>
                            {% endfor %}
                        </div>
                    </div>
                </div>
            {% endif %}
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}